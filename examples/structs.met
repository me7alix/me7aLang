import "std.met"

struct Address {
	city: *i8,
	post_code: int,
}

struct Person {
	name:   *i8,
	salary: int,
	addr: Address,
}

person_print(p: *Person) {
	print_str("Name: ")
	print_str((*p).name)
	print_str("\nSalary: ")
	print_int((*p).salary)
	print_str("City: ")
	print_str((*p).addr.city)
	print_str("\nPost code: ")
	print_int((*p).addr.post_code)
}

main() {
	me: Person
	me.name = "Michael"
	me.salary = 777
	me.addr.city = "New York"
	me.addr.post_code = 100101
	person_print(&me)
}
