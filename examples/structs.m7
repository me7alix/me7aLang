import "std.m7"

struct Address {
	city: *i8,
	post_code: int,
}

struct Person {
	name:   *i8,
	salary: int,
	addr: Address,
}

person_print(p: *Person) {
	printf("Name: %s\nSalary: %d\nCity: %s\nPost code: %d\n",
		(*p).name, (*p).salary, (*p).addr.city, (*p).addr.post_code)
}

main() {
	me: Person
	me.name = "Michael"
	me.salary = 777
	me.addr.city = "New York"
	me.addr.post_code = 100101
	person_print(&me)
}
